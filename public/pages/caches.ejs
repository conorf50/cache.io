<div class="jumbotron text-center">
	<h1>List All Geocaches</h1>
	
	<p>{{ message }}</p>

    <button type="button" class="btn btn-default" ng-click="addCache()">
        Add a new cache
    </button>

  <div ng-controller="cachesController as list">
	<table align="center" valign="middle">
	  <tbody ng-repeat="cache in caches | orderBy:'-upvotes'">
        <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >
        <td>
            <h6> Name: {{cache.name}}</h6>   <!--- TODO change this to link --->
        </td>
        <td>
            <h6> Rating: {{cache.rating}}</h6>
        </td>
        <td>
            <h6> Type: {{cache.type}}</h6>
        </td>
        <td>
            <h6> Photo: {{cache.photo}}</h6>   <!--- todo change this to link--->
        </td>

        <td>
      
      <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>

      
      <button type="button" class="btn btn-default" ng-click="delete(cache._id)">
          <span class="glyphicon glyphicon-remove"></span> Remove 
        </button>
        <button type="button" class="btn btn-default" ng-click="updateGeocache(cache)">
          <span class="glyphicon glyphicon-edit"></span> Edit 
        </button>
        </span>    
             </td>
    	</tr>
      </tbody>
    </table> 
  </div>
</div>